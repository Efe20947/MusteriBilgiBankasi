@model IEnumerable<MusteriTakip.Models.Firma>

@{
    ViewData["Title"] = "Firmaların Listesi";
}

<h2 class="mb-4 text-primary">Firmaların Listesi</h2>

<p>
    <a class="btn btn-success mb-3" asp-action="Create">+ Yeni Firma Ekle</a>
</p>
<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirmaAdi)</th>
            <th>@Html.DisplayNameFor(model => model.Yetkili)</th>
            <th>@Html.DisplayNameFor(model => model.Telefon)</th>
            <th>@Html.DisplayNameFor(model => model.Adres)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirmaAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Yetkili)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                <td>@Html.DisplayFor(modelItem => item.Adres)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

